{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"extends": "liferay",
	"rules": {
		"no-unused-vars": ["error", {"ignoreRestSiblings": true}],
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"notice/notice": [
			"error",
			{
				"templateFile": "copyright.js"
			}
		]
	}
}
